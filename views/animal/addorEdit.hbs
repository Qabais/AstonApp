<h3>{{viewTitle}}</h3>


<form action="/animal" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{animal._id}}">
    <div class="form-group">
        <label>Animal Name</label>
        <input type="text" class="form-control" name="name" placeholder="Animal Name" value="{{animal.name}}">      
    </div>
    <div class="form-group">
        <label>Animal Age</label>
        <input type="text" class="form-control" name="age" placeholder="Animal Age" value="{{animal.age}}">      
    </div>
    <div class="form-group">
        <label>Animal Description</label>
        <input type="text" class="form-control" name="description" placeholder="Animal Description" value="{{animal.description}}">      
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Submit</button>
        <a class="btn btn-secondary" href="/animal/list">View All</a>
    </div>
</form>